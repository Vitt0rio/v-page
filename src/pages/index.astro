---
import BaseLayout from '/src/layouts/BaseLayout.astro';
---

<BaseLayout title="V">

  <div class="home-screen">
    <div class="home-box">

      <!-- âš¡ BORDE ELÃ‰CTRICO -->
      <svg class="electric-border" viewBox="0 0 100 100" preserveAspectRatio="none">
        <rect x="0" y="0" width="100" height="100" class="electric-base" />
        <rect x="0" y="0" width="100" height="100" class="electric-anim" />
      </svg>

      <img src="/logo.png" alt="V logo" class="home-logo" />

      <div class="home-actions">
        <a href="/blog" class="home-button">
          Entrar
        </a>
      </div>

    </div>
  </div>

  <style>
    .home-screen {
      min-height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 20px;
    }

    .home-box {
      position: relative;
      background: var(--bg-secondary);
      width: 100%;
      max-width: 520px;
      padding: 90px 60px;
      text-align: center;
      overflow: hidden;
      transition: transform 0.4s ease;
    }

    .home-box:hover {
      transform: translateY(-6px);
    }

    /* âš¡ BORDE */

    .electric-border {
      position: absolute;
      inset: 0;
      width: 100%;
      height: 100%;
      pointer-events: none;
    }

    .electric-base {
      fill: none;
      stroke: rgba(255,255,255,0.25);
      stroke-width: 1;
    }

    .electric-anim {
      fill: none;
      stroke: white;
      stroke-width: 1;
      stroke-dasharray: 400;
      stroke-dashoffset: 400;
      filter: drop-shadow(0 0 6px white);
      opacity: 0;
    }

    @keyframes electric-flow {
      0% {
        stroke-dashoffset: 400;
        opacity: 0;
      }
      20% {
        opacity: 1;
      }
      60% {
        stroke-dashoffset: 0;
        opacity: 1;
      }
      100% {
        stroke-dashoffset: 0;
        opacity: 1;
      }
    }

    .home-box:hover .electric-anim {
      animation: electric-flow 1.4s ease forwards; /* un poco mÃ¡s suave */
    }

    /* ðŸ”¥ LOGO */

    .home-logo {
      width: 200px;
      max-width: 80%;
      height: auto;
      display: block;
      margin: 0 auto 50px auto;
      filter: invert(1);
      opacity: 0.95;
      transition: transform 0.3s ease;
      position: relative;
      z-index: 2;
    }

    .home-logo:hover {
      transform: translateY(-4px);
    }

    .home-actions {
      position: relative;
      z-index: 2;
    }

    .home-button {
      display: inline-block;
      padding: 14px 50px;
      border: 1px solid var(--border);
      color: var(--text) !important;
      background: transparent;
      font-size: 0.85em;
      letter-spacing: 2px;
      transition: all 0.3s ease;
      text-decoration: none !important;
    }

    .home-button:hover {
      border-color: var(--accent);
      transform: translateY(-4px);
      background: #1b1b1b;
    }

    /* ðŸ“± RESPONSIVE REAL */

    @media (max-width: 600px) {
      .home-box {
        padding: 70px 35px;
      }

      .home-logo {
        width: 150px;
        margin-bottom: 40px;
      }

      .home-button {
        padding: 12px 35px;
        font-size: 0.8em;
      }
    }

  </style>

</BaseLayout>
